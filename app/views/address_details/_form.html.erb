<%= form_for @address_detail, :html => { :class => "form-horizontal address_detail" } do |f| %>

  <% if @address_detail.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@address_detail.errors.count, "error") %> prohibited this address_detail from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @address_detail.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :line1, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :line1, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:line1) %>
  </div>
  <div class="form-group">
    <%= f.label :line2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :line2, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:line2) %>
  </div>
  <div class="form-group">
    <%= f.label :city, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:state) %>
  </div>
  <div class="form-group">
    <%= f.label :postcode, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :postcode, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:postcode) %>
  </div>
  <div class="form-group">
    <%= f.label :country, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :country, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:country) %>
  </div>
  <div class="form-group">
    <%= f.label :customer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :customer_id, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:customer_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                address_details_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
