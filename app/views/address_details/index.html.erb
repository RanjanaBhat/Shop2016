<!DOCTYPE html>
<html lang='en'>
<%- model_class = AddressDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:line1) %></th>
      <th><%= model_class.human_attribute_name(:line2) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @address_details.each do |address_detail| %>
      <tr>
        <td><%= link_to address_detail.id, address_detail_path(address_detail) %></td>
        <td><%= address_detail.line1 %></td>
        <td><%= address_detail.line2 %></td>
        <td><%= address_detail.city %></td>
        <td><%= address_detail.state %></td>
        <td><%= address_detail.postcode %></td>
        <td><%= address_detail.country %></td>
        <td><%= address_detail.customer_id %></td>
        <td><%=l address_detail.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_address_detail_path(address_detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      address_detail_path(address_detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_address_detail_path,
            :class => 'btn btn-primary' %>
</html>