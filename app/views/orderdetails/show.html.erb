<%- model_class = Orderdetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:order_no) %>:</strong></dt>
  <dd><%= @orderdetail.order_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_express_delivery) %>:</strong></dt>
  <dd><%= @orderdetail.is_express_delivery %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_customer_pickup) %>:</strong></dt>
  <dd><%= @orderdetail.is_customer_pickup %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_date) %>:</strong></dt>
  <dd><%= @orderdetail.delivery_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carrier) %>:</strong></dt>
  <dd><%= @orderdetail.carrier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_currency) %>:</strong></dt>
  <dd><%= @orderdetail.order_currency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_value) %>:</strong></dt>
  <dd><%= @orderdetail.order_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_collection) %>:</strong></dt>
  <dd><%= @orderdetail.payment_collection %></dd>
  <dt><strong><%= model_class.human_attribute_name(:special_instruction) %>:</strong></dt>
  <dd><%= @orderdetail.special_instruction %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_slot) %>:</strong></dt>
  <dd><%= @orderdetail.delivery_slot %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice) %>:</strong></dt>
  <dd><%= image_tag(@orderdetail.invoice, :size => "100x100", :alt => "Picture") %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orderdetails_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_orderdetail_path(@orderdetail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              orderdetail_path(@orderdetail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
