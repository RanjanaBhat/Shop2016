<!DOCTYPE html>
<html lang='en'>
<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="panel panel-default">
  <div class="panel-heading custom_class" style="background-color:lightblue"><%= @customer.name %>'s Personal Details</div>
  <div class="panel-body">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:firstname) %>:</strong></dt>
  <dd><%= @customer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lastname) %>:</strong></dt>
  <dd><%= @customer.lname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:birthday) %>:</strong></dt>
  <dd><%= @customer.bdate %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:addr1) %></strong></dt>
  <dd><%#= @customer.addr1 %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:addr2) %></strong></dt>
  <dd><%#= @customer.addr2 %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:addr3) %></strong></dt>
  <dd><%#= @customer.addr3 %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:addr4) %></strong></dt>
  <dd><%#= @customer.addr4 %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:city) %></strong></dt>
  <dd><%#= @customer.city %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:state) %></strong></dt>
  <dd><%#= @customer.state %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:country) %></strong></dt>
  <dd><%#= @customer.country %></dd>
  <dt><strong><%#= model_class.human_attribute_name(:postcode) %></strong></dt>
  <dd><%#= @customer.postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contactno) %>:</strong></dt>
  <dd><%= @customer.contactno %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @customer.email %></dd>
</dl>
</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading custom_class" style="background-color:lightblue"><%= @customer.name %>'s Address Details</div>
    <div class="panel-body">
      <dl class="dl-horizontal">
      <% @customer.address_details.each do |addres| %>
        <dt><strong><%= model_class.human_attribute_name(:line_1) %></strong></dt>
        <dd><%= addres.line1 %></dd>
        <dt><strong><%= model_class.human_attribute_name(:line_2) %></strong></dt>
        <dd><%= addres.line2 %></dd>
        <dt><strong><%= model_class.human_attribute_name(:city) %></strong></dt>
        <dd><%= addres.city %></dd>
        <dt><strong><%= model_class.human_attribute_name(:state) %></strong></dt>
        <dd><%= addres.state %></dd>
        <dt><strong><%= model_class.human_attribute_name(:country) %></strong></dt>
        <dd><%= addres.country %></dd>
        <dt><strong><%= model_class.human_attribute_name(:postcode) %></strong></dt>
        <dd><%= addres.postcode %></dd></p>
      <% end %>
    </dl>
  </div>
</div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</html>