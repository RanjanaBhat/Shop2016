<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :SKU, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :SKU, :class => 'form-control', :required => true %>
    </div>
    <%=f.error_span(:SKU) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control',:required => true %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :quantity, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:quantity) %>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :weight, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:weight) %>
  </div>
  <div class="form-group">
    <%= f.label :height, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :height, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:height) %>
  </div>
  <div class="form-group">
    <%= f.label :width, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :width, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:width) %>
  </div>
  <div class="form-group">
    <%= f.label :depth, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :depth, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:depth) %>
  </div>
  <div class="form-group">
    <%= f.label :company, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :company, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:company) %>
  </div>
  <div class="form-group">
    <%= f.label :cost_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cost_price, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:cost_price) %>
  </div>
  <div class="form-group">
    <%= f.label :retail_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :retail_price, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:retail_price) %>
  </div>
  
  <div class="form-group">
    <%= f.label :upload_pic, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :photo, :class => 'form-control',:required => true  %>
    </div>
    <%=f.error_span(:upload_pic) %>
  </div>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
