<!DOCTYPE html>
<html lang='en'>

<%- model_class = Orderdetail -%>
<div class="page-header">
  <h1>Orders</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:product) %></th>
      <th><%= model_class.human_attribute_name(:cname) %></th>
      <th><%= model_class.human_attribute_name(:order_no) %></th>
      <th><%= model_class.human_attribute_name(:is_express_delivery) %></th>
      <th><%= model_class.human_attribute_name(:is_customer_pickup) %></th>
      <th><%= model_class.human_attribute_name(:delivery_date) %></th>
      <th><%= model_class.human_attribute_name(:carrier) %></th>
      <th><%= model_class.human_attribute_name(:order_currency) %></th>
      <th><%= model_class.human_attribute_name(:order_value) %></th>
      <th><%= model_class.human_attribute_name(:payment_collection) %></th>
      <th><%= model_class.human_attribute_name(:special_instruction) %></th>
      <th><%= model_class.human_attribute_name(:delivery_slot) %></th>
      <th><%= model_class.human_attribute_name(:invoice) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orderdetails.each do |orderdetail| %>
      <tr>
        <td><%= orderdetail.pname %></td>
        <td><%= orderdetail.name %></td>
        <td><%= link_to orderdetail.order_no, orderdetail_path(orderdetail) %></td>
        <td><%= orderdetail.is_express_delivery %></td>
        <td><%= orderdetail.is_customer_pickup %></td>
        <td><%= orderdetail.delivery_date %></td>
        <td><%= orderdetail.carrier %></td>
        <td><%= orderdetail.order_currency %></td>
        <td><%= orderdetail.order_value %></td>
        <td><%= orderdetail.payment_collection %></td>
        <td><%= orderdetail.special_instruction %></td>
        <td><%= orderdetail.delivery_slot %></td>
        <td><%= image_tag(orderdetail.invoice, :size => "100x100", :alt => "Picture") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_orderdetail_path(orderdetail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      orderdetail_path(orderdetail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</html>