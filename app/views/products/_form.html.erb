<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
    <div class="col-md-6 ">
      <form class="form-horizontal" role="form">
        <fieldset>

          <!-- Form Name -->
          <legend>Product Details</legend>

          <!-- Text input-->
          <div class="form-group">
            <label>Product Name: </label>
            <div class="col-sm-10">
              <%=  f.text_field :name, class: 'form-control input-lg',required: true, placeholder: "Product Name", tabindex:"1" %> 
            <span class="help-block with-errors"></span>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label>SKU</label>
            <div class="col-sm-10">
              <%=  f.text_field :SKU, class: 'form-control input-lg', required: true,placeholder: "SKU" ,tabindex:"2" %> 
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label>Cost Price</label>
            <div class="col-sm-10">
              <%=  f.text_field :cost_price, class: 'form-control input-lg', required: true,placeholder: "Cost Price" ,tabindex:"3" %> 
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label >Retail Price</label>
            <div class="col-sm-4">
              <%=  f.text_field :retail_price, class: 'form-control input-lg', required: true,placeholder: "Retail Price" ,tabindex:"4" %>
            </div>

            <label>Quantity</label>
            <div class="col-sm-4">
              <%=  f.number_field :quantity, class: 'form-control input-lg', required: true,placeholder: "Quantity" ,tabindex:"5" %>
          </div>



          <!-- Text input-->
          <div class="form-group">
            <label>Weight(gm)</label>
            <div class="col-sm-10">
              <%=  f.number_field :weight, class: 'form-control input-lg', required: true,placeholder: "Weight" ,tabindex:"6" %> 
            </div>
          </div>
           <!-- Text input-->
          <div class="form-group">
            <label>Height(cm)</label>
            <div class="col-sm-10">
              <%=  f.number_field :height, class: 'form-control input-lg', required: true,placeholder: "Height" ,tabindex:"7" %> 
            </div>
          </div>
           <!-- Text input-->
          <div class="form-group">
            <label>Width(cm)</label>
            <div class="col-sm-10">
              <%=  f.number_field :width, class: 'form-control input-lg', required: true,placeholder: "Width" ,tabindex:"8" %> 
            </div>
          </div>
           <!-- Text input-->
          <div class="form-group">
            <label>Depth(cm)</label>
            <div class="col-sm-10">
              <%=  f.number_field :depth, class: 'form-control input-lg', required: true,placeholder: "Depth" ,tabindex:"9" %> 
            </div>
          </div>
           <!-- Text input-->
          <div class="form-group">
            <label>Company</label>
            <div class="col-sm-10">
              <%=  f.text_field :company, class: 'form-control input-lg', required: true,placeholder: "Company" ,tabindex:"10" %> 
            </div>
          </div>

          <div class="form-group">
            <label>Upload Pic</label>
            <div class="col-sm-10">
                <%= f.file_field :photo %>
            </div>
          </div>
          <br/>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>
        </fieldset>
      </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
<%end%>