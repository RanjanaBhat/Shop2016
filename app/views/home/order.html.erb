<!--Order Form-->
<div class="panel panel-default">
    <div class="panel-heading">Order Details</div>
  <div class="panel-body">
<%= f.fields_for :orderdetails do |order| %>
  <div class="col-md-2">
    <%= order.label :orderno, :class => 'control-label col-lg-2'%>
      <%= order.number_field :order_no, :class => 'form-control', :required => true %>
    <span class="help-block with-errors"></span>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <%= order.label :is_express_delivery, :class => 'control-label col-md-6 col-md-offset-3' %>
      <%= order.check_box :is_express_delivery, :class => 'form-control'  %>
      
    <span class="help-block with-errors"></span>
  </div>
  <div class="col-md-4">
    <%= order.label :is_customer_pickup, :class => 'control-label col-md-6 col-md-offset-3' %>
      <%= order.check_box :is_customer_pickup, :class => 'form-control'  %>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group ">
    <%= order.label :delivery_date, :class =>'control-label col-md-6 col-md-pull-4'%>
    <div class="col-md-4 col-md-pull-4">
    <%= order.date_select :delivery_date, :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :delivery_slot, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%=order.select "delivery_slot", options_for_select([ "Morning", "Noon", "Evening", "Night" ]), prompt: "Select", :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :carrier, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%= order.select "carrier", options_for_select([ "FBA", "PDF", "SIP", "DIP" ]),prompt: "Select", :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :order_currency, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%=  order.select "order_currency", options_for_select([ "USD", "INR", "EUR", "AFN", "AUD", "JPY"]),prompt: "Select", :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :order_value, :class => 'control-label col-lg-2' %>
    <div class="col-md-2">
      <%= order.number_field :order_value, :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :payment_gateway, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%=order.select "payment_collection", options_for_select([ "PayU Money  ", " MasterCard Payment Gateway Services ", "NETbilling", "PayDollar", "PayU India", "DebitCard", "CreditCard"]),prompt: "Select", :class => 'form-control', :required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :special_instruction, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%= order.text_area :special_instruction, :class => 'form-control', :required => true ,size: "50x5"  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <div class="form-group">
    <%= order.label :invoice, :class => 'control-label col-lg-2' %>
    <div class="col-md-6">
      <%= order.file_field :invoice,:required => true  %>
    </div>
    <span class="help-block with-errors"></span>
  </div>
  <%end%>
</div>
</div>